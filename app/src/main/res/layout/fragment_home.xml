<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment"
    android:background="@color/black"
    android:scrollbars="none">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Good Morning!"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentbanner"
            android:name="com.dinklokcode.musicapp.Fragment.Fragment_Banner"
            tools:layout="@layout/fragment_banner"
            android:layout_marginTop="20dp">
        </fragment>

        <TextView
            android:id="@+id/newReleasesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Playlists"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            />

        <LinearLayout
            android:id="@+id/musiclist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">


            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/gray_strong"
                android:gravity="left|center"
                android:text="Liked Songs  💛"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/gray_strong"
                android:text="Podcast  🎤 🤍"
                android:gravity="left|center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/gray_strong"
                android:text="Dance Music  💃"
                android:gravity="left|center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginLeft="-315dp"
                android:layout_marginTop="70dp"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/gray_strong"
                android:text="Radio  📻 "
                android:gravity="left|center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="82dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/gray_strong"
                android:text="❤"
                android:gravity="left|center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginLeft="-315dp"
                android:layout_marginTop="150dp"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/gray_strong"
                android:text="💙"
                android:gravity="left|center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="150dp"
                />
        </LinearLayout>

        <fragment
            android:name="com.dinklokcode.musicapp.Fragment.Fragment_Radio"
            android:id="@+id/fragmentchude5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_nghesi">
        </fragment>



        <fragment
            android:name="com.dinklokcode.musicapp.Fragment.fragment_playlist"
            android:id="@+id/fragmentplaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_playlist">
        </fragment>

        <fragment
            android:name="com.dinklokcode.musicapp.Fragment.Fragment_ChuDe"
            android:id="@+id/fragmentchude2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_chude">
        </fragment>

        <fragment
            android:name="com.dinklokcode.musicapp.Fragment.Fragment_NgheSi"
            android:id="@+id/fragmentchude3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_nghesi">
        </fragment>

        <fragment
            android:name="com.dinklokcode.musicapp.Fragment.Fragment_ThinhHanh"
            android:id="@+id/fragmentchude4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_nghesi">
        </fragment>

    </LinearLayout>
</ScrollView>